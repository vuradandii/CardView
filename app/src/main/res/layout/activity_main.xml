<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday,oct 10"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/sun"
                android:layout_marginRight="35dp"
                android:layout_gravity="right"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="80dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="#EC99B5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_work_history_24"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bithday party"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="80dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFEB3B">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Our lights are the A-1.."
                    android:padding="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_colorize_24"
                    android:padding="15dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="170dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/turtle"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="90dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#EC99B5">
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Ideas for meeting: How about making this.."
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_colorize_24"
                android:padding="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#EC99B5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_work_history_24"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workspace"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="180dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fish"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="180dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#03A9F4"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="3dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rex's food"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internet fees"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Croissants"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="call Julie"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="80dp"
            app:cardCornerRadius="30dp"
            android:layout_marginStart="5dp"
            app:cardBackgroundColor="#15BF66">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Drink a glass of water"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:padding="20dp"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="18dp"
                android:text="3/10"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_note_add_24"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="25dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#6DBC2A">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_colorize_24"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="45dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="2dp"
            android:background="#6DBC2A"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_note_add_24"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add new block"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="2dp"
            app:cardBackgroundColor="#6DBC2A">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/turtle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:gravity="center"
                android:layout_marginTop="46dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>